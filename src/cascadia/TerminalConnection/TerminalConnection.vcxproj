<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="..\..\..\common.openconsole.props" Condition="'$(OpenConsoleDir)'==''" />
  <PropertyGroup>
    <ConfigurationType>DynamicLibrary</ConfigurationType>
    <SubSystem>Console</SubSystem>
    <OpenConsoleUniversalApp>true</OpenConsoleUniversalApp>
  </PropertyGroup>
  <Import Project="$(OpenConsoleDir)src\cppwinrt.build.pre.props" />

  <PropertyGroup Label="Globals">
    <ProjectGuid>{ea07ddec-c46d-4588-b1c0-40f31ae9100b}</ProjectGuid>
    <ProjectName>TerminalConnection</ProjectName>
    <RootNamespace>TerminalConnection</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ClInclude Include="pch.h" />
    <!-- <ClInclude Include="ConptyConnection.h">
      <DependentUpon>ConptyConnection.idl</DependentUpon>
    </ClInclude> -->
    <ClInclude Include="ConhostConnection.h">
      <DependentUpon>ConhostConnection.idl</DependentUpon>
    </ClInclude>
    <ClInclude Include="EchoConnection.h">
      <DependentUpon>EchoConnection.idl</DependentUpon>
    </ClInclude>
  </ItemGroup>
  <ItemGroup>
    <ClCompile Include="pch.cpp">
      <PrecompiledHeader>Create</PrecompiledHeader>
    </ClCompile>
    <!-- <ClCompile Include="ConptyConnection.cpp">
      <DependentUpon>ConptyConnection.idl</DependentUpon>
    </ClCompile> -->
    <ClCompile Include="ConhostConnection.cpp">
      <DependentUpon>ConhostConnection.idl</DependentUpon>
    </ClCompile>
    <ClCompile Include="EchoConnection.cpp">
      <DependentUpon>EchoConnection.idl</DependentUpon>
    </ClCompile>
    <ClCompile Include="$(GeneratedFilesDir)module.g.cpp" />
  </ItemGroup>
  <ItemGroup>
    <!-- <Midl Include="Class.idl" /> -->
    <Midl Include="ITerminalConnection.idl" />
    <!-- <Midl Include="ConptyConnection.idl" /> -->
    <Midl Include="ConhostConnection.idl" />
    <Midl Include="EchoConnection.idl" />
  </ItemGroup>
  <ItemGroup>
    <None Include="packages.config" />
  </ItemGroup>

  <ItemDefinitionGroup>
    <Link>
      <AdditionalDependencies>kernel32.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>

  </ItemDefinitionGroup>

  <PropertyGroup>
    <!-- DONT REDIRECT OUR OUTPUT -->
    <NoOutputRedirection>true</NoOutputRedirection>
  </PropertyGroup>
  <!-- Copy our built binary up a directory, so the wapproj will be able to find it -->
  <ItemDefinitionGroup>
    <PostBuildEvent>
      <Command>
        echo OutDir=$(OutDir)
        echo IntDir=$(IntDir)
        echo OutputPath=$(OutputPath)

        (echo f | xcopy /y $(OpenConsoleDir)$(Platform)\$(Configuration)\$(ProjectName)\$(ProjectName).dll $(OpenConsoleDir)$(Platform)\$(Configuration)\$(ProjectName).dll )
        (echo f | xcopy /y $(OpenConsoleDir)$(Platform)\$(Configuration)\$(ProjectName)\$(ProjectName).pdb $(OpenConsoleDir)$(Platform)\$(Configuration)\$(ProjectName).pdb )
      </Command>
    </PostBuildEvent>
  </ItemDefinitionGroup>

  <Import Project="$(OpenConsoleDir)src\common.build.post.props" />
  <Import Project="$(OpenConsoleDir)src\cppwinrt.build.post.props" />
</Project>
