      <DependentUpon>TermControl.idl</DependentUpon>
    </ClInclude>
    <ClInclude Include="TerminalSettings.h">
      <DependentUpon>TerminalSettings.idl</DependentUpon>
    </ClInclude>
  </ItemGroup>
